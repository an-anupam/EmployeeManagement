@* @using Bulky.Models *@


@* <partial name="_Notification"/> *@
<div class="container">
  <div class="row pt-4 pb-3">

    <div class="col-6">
      <h2 class="text-primary">
        Employees' Skills List
      </h2>
    </div>
    @* <div class="col-6 text-end">
    <a asp-controller="EmployeeManage" asp-action="Create" class="btn btn-primary">
    <i class="bi bi-plus-circle"></i> Create New Employee
    </a>
    </div> *@

  </div>


  <table id="EmpSkillTable" class="table table-bordered table-striped"
    cellspacing="0">
    <thead>
      <tr>
        <th scope="col">
          Employee Id
        </th>
        <th scope="col">
          Employee Name
        </th>
        <th scope="col">
          Primary Skill
        </th>
        <th scope="col">
          Skills Ratings
        </th>
        <th scope="col">
          Year Of Experience
        </th>
        <th scope="col"></th>
      </tr>
    </thead>




    <tbody>
      @foreach (var obj in Model)
      {
        <tr>
          <td>@obj.Employee.Id</td>
          <td>@obj.Employee.FirstName @obj.Employee.LastName</td>
          @foreach(var employeeSkill in obj.EmployeeSkills)
        {
            <td>@employeeSkill.Skill.allSkills</td>
            <td>@employeeSkill.ratingsInSkill</td>
            <td>@employeeSkill.experienceInSkill</td>
        }
          <td>
            <div class="w-75 btn-group" role="group">
              <a asp-controller="EmployeeSkillManage" asp-action="Assign" asp-route-id="@obj.Employee.Id"
                class="btn btn-info mx-2">
                <i class="bi bi-pencil-square"></i>Assign
              </a>
              @* <a asp-controller="" asp-action="" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
            <i class="bi bi-trash"></i> Delete
            </a> *@

            </div>
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>


 @section Scripts {

  <script src="~/js/employeeSkill.js"></script>
  @{
    <partial name="_ValidationScriptsPartial.cshtml" />
  }
} 

