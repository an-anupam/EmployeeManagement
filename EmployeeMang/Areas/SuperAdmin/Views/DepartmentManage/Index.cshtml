@* @using System.Collections.Generic
@model List<Bulky.Models.Category> *@
@model List<Department>
@* @using Bulky.Models *@


@* <partial name="_Notification"/> *@
<div class="container">

<div class="row pt-4 pb-3">
   
    <div class="col-6">
      <h2 class="text-primary">
        Departments List
      </h2>
    </div>
    <div class="col-6 text-end">
      <a asp-controller="DepartmentManage" asp-action="Create" class="btn btn-outline-info">
      <i class="bi bi-plus-circle"></i> Create New Department
      </a>
    </div>
   
</div>

<table  id="DeprtTable" class=" table table-bordered table-striped">
   <thead >
    <tr>
      <th>
        Department Id
      </th>
      <th>
        Department Name
      </th>
      <th></th>
    </tr>
    </thead>

    <tbody>
      @foreach(var obj in Model.OrderBy(order => order.Id)){
       <tr>
         <td>@obj.Id</td>
         <td>@obj.Name</td>
         <td>
          <div class="w-75 btn-group" role="group">
             <a asp-controller="DepartmentManage" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-info mx-2">
                  <i class="bi bi-pencil-square"></i>Edit            
             </a>
             <a asp-controller="DepartmentManage" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                  <i class="bi bi-trash"></i> Delete
             </a>
             </div>
         </td>
       </tr>
       }
    </tbody>
</table>
</div>


@section Scripts {
  <script src="~/js/department.js"></script>
}